@using RauSach.Core.Models
@model List<Vegetable>
@using Microsoft.AspNetCore.Http.Extensions
@{
    ViewData["Title"] = "Danh sách rau";
}
@section Button {
    <a href="@Url.Action("EditVegetable", new { returnUrl = Context.Request.GetEncodedUrl()})" class="btn btn-success btn-sm pull-right">Thêm mới</a>
}
    <div class="card mt-2 mb-2 shadow-base">
        <div class="card-body pb-0">
            <div class="row">
                <div class="col-lg-6">
                    <div class="list-group list-group-striped">
                        @for (int i = 0; i < Model.Count / 2 + Model.Count % 2; i++)
                    {
                        var item = Model[i];
                        <partial name="_VegetableItem" model="@item" />
                    }
                </div>
            </div><!-- col-6 -->

            <div class="col-lg-6 mg-t-20 mg-lg-t-0">
                <div class="list-group list-group-striped">
                    @for (int i = Model.Count / 2 + Model.Count % 2; i < Model.Count; i++)
                    {
                        var item = Model[i];
                        <partial name="_VegetableItem" model="@item" />
                    }
                </div><!-- list-group -->
            </div><!-- col-6 -->
        </div><!-- row -->
    </div>
</div>
