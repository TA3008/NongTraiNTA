@using RauSach.Application.Extensions
@using RauSach.Application.Services
@using RauSach.Core.Models
@model List<SystemParamData>
@using Microsoft.AspNetCore.Http.Extensions
@{
    ViewData["Title"] = "Cấu hình hệ thống";
    var allParams = PropertyExtensions.GetDataTypes<ISystemParameters>();
    var stt = 1;
}
<div class="card mt-2 mb-2 shadow-base">
    <div class="card-body pb-0">
        <table class="table mg-b-0" cellspacing="0">
            @foreach (var item in allParams)
            {
                var value = Model.FirstOrDefault(m => m.DataName == item.DataName)?.DataValue;
                <tr class="stat even">
                    <td class="ac">
                        @(stt++)
                    </td>
                    <td style="padding-bottom: 15px; padding-top: 15px;">
                        <a href="@Url.Action("EditSystemParameter", new { name = item.DataName })">@item.Description: </a> <strong>@value</strong>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
