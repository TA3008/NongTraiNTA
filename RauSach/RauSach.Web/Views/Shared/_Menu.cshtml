                <div class="navBar01">
                    <div class="logo">
                        <a href="/"><img src="~/images/logo1.png" alt="NTA Farm"></a>
                    </div>
                    <nav class="mainMenu">
                        <ul>
                            <li class="menu-item">
                                <a href="/">Trang chủ</a>
                            </li>
                            <li class="menu-item-has-children">
                                <span>Hướng dẫn</span>
