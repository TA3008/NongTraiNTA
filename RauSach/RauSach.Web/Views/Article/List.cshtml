@using RauSach.Core.Models;
@using RauSach.Web.Helpers;
@model List<Article>

@{
    Layout = "~/Views/Shared/_ArticleLayout.cshtml";
}

@section Banner{
    <section class="page_banner shop_banner" style="background-image: url(/assets/images/bg/b3.jpg); margin-top: 120px;">
        <div class="container largeContainer">
            <div class="row">
                <div class="col-lg-12 text-left">
                    <p class="breadcrumbs">
                        <a href="/"><i class="twi-home"></i>Trang chủ</a><i class="twi-angle-right"></i>Danh sách tin
                    </p>
                </div>
            </div>
        </div>
    </section>
}

@if (Model?.Any() == true)
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6">
                <div class="blogItem01 mb70">
                    <div class="blogThumb">
                        @HtmlHelperExtension.Img(item.Thumbnail, item.Name, "max-height-230px")
                    </div>
                    <div class="blogContent">
                        <h3><a href="@FriendlyUrl.ArticleDetail(item.FriendlyUrl)">@item.Name</a></h3>
                    </div>
                </div>
            </div>
        }
    </div>
}