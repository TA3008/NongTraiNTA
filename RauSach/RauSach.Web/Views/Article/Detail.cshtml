@using RauSach.Web.Components;
@using RauSach.Web.Helpers
@model RauSach.Core.Models.Article

@{
    Layout = "~/Views/Shared/_ArticleLayout.cshtml";
}

@section Banner {
    <section class="page_banner blog_details_banner">
        <div id="sppostCarousel" class="carousel slide carousel-fade" data-ride="carousel" data-interval="5000">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    @HtmlHelperExtension.Img("/assets/images/blog/s1.webp")
                </div>
                <div class="carousel-item">
                    @HtmlHelperExtension.Img("/assets/images/blog/s2.webp")
                </div>
            </div>
            <a class="carousel-control-prev" href="#sppostCarousel" role="button" data-slide="prev">
                <i class="twi-chevron-left2"></i>
            </a>
            <a class="carousel-control-next" href="#sppostCarousel" role="button" data-slide="next">
                <i class="twi-chevron-right2"></i>
            </a>
        </div>
        @if (Model != null)
        {
            <div class="container largeContainer">
                    <div class="row">
                    <div class="col-lg-12">
                        <div class="bannerContent">
                            <a href="@FriendlyUrl.ArticleDetail(Model.FriendlyUrl)"><h2 class="banner-title">@Model.Name</h2></a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </section>
}

@if (Model != null)
{
    <div class="sic_the_content clearfix">
        @Html.Raw(Model.Content)
    </div>
    @await Component.InvokeAsync("OtherArticles",
                     new { 
                         currentArticleId =  Model.Id,
                         currentArticleCreatedDate = Model.Created  }
                     )
}
