@using RauSach.Web.Models
@model UserViewModel

<section class="page_banner shop_banner" style="background-image: url(/assets/images/bg/b3.jpg); margin-top: 120px;">
    <div class="container largeContainer">
        <div class="row">
            <div class="col-lg-12 text-left">
                <p class="breadcrumbs">
                    <a href="/"><i class="twi-home"></i>Trang chủ</a><i class="twi-angle-right"></i>Thông tin cá nhân
                </p>
            </div>
        </div>
    </div>
</section>

<section class="contactInfoSec">
    <div class="container largeContainer">
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="contact_form">
                    <h2>Cập nhật thông tin cá nhân</h2>
                    @using (Html.BeginForm("Profile", "Account", FormMethod.Post, new { @class = "row", id = "contact_form" }))
                    {
                        @Html.HiddenFor(x => x.UserName)
                        @Html.HiddenFor(x => x.Email)
                        <div class="col-md-12" style="text-align: left">
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                        @Html.AntiForgeryToken()
                        <div class="col-md-12">
                            <p style="text-align: left">Email: <span class="green">@Model.Email</span></p>
                            <p style="text-align: left">Tên đăng nhập: <span class="green">@Model.UserName</span></p>
                            @Html.TextBoxFor(x => x.Name, new {@class = "required", placeholder = "Tên *"})
                            @Html.TextBoxFor(x => x.PhoneNumber, new {@class = "required", placeholder = "Điện thoại *"})
                            @Html.TextBoxFor(x => x.Address, new {@class = "required", placeholder = "Địa chỉ"})
                        </div>
                        <div class="col-md-12">
                            <button type="submit" class="organ_btn">Gửi</button>
                            <div class="con_message"></div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.js"></script>
    @if (TempData["success"] != null && (bool)TempData["success"] == true)
    {
        <script>
            $(document).ready(function () {
                toastr.success("Cập nhật thông tin thành công!");
                $("#contact_form").reset();
            });
        </script>
    }
}