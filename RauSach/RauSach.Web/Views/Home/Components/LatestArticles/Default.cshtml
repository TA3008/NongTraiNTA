@using RauSach.Web.Helpers
@model List<RauSach.Core.Models.Article>

@if (Model?.Any() == true)
{
    <section class="blogSectiont01 latestNews">
        <div class="container largeContainer">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="subTitle sbsm">Hoàn toàn tự nhiên</div>
                    <h2 class="secTitle">Tin mới nhất</h2>
                </div>
            </div>
            <div class="row">
                @foreach(var item in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="blogItem01">
                            <div class="blogThumb">
                                @HtmlHelperExtension.Img(item.Thumbnail, alt: item.Name)
                            </div>
                            <div class="blogContent">
                                <h3><a href="@FriendlyUrl.ArticleDetail(item.FriendlyUrl)">@item.Name</a></h3>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}